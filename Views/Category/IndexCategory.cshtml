@* catching the variables which are passed to th view to ve used in view *@
@model IEnumerable<Catagory>
@{
    ViewData["Title"] = "Category";
}

@* Check for success message and display alert *@
@* an be added in the _layout before @RenderBody to inclue it to all the pages *@
<partial name="_Alert" />

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <H1 class="text-primery">Catagories List</H1>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="Category" asp-action="CreateCategory"
                class="btn btn-success text-secondary-emphasis font-weight-bold">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create New Category
            </a>
        </div>
    </div>
    <br><br>

    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Display Order</td>
                <td>Creation Date</td>
                <td>Delete Entry</td>
                <td>Edit Entry</td>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="4" class="text-center">No categories found.</td>
                </tr>
            }
            else
            {
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.Id</td>
                        <td>@i.Name</td>
                        <td>@i.DisplayOrder</td>
                        <td>@i.CreatedDateTime.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn btn-outline-warning" asp-controller="Category" asp-action="EditCategory"
                                asp-route-id="@i.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn btn-outline-danger" asp-controller="Category" asp-action="DeleteCategory"
                                asp-route-id="@i.Id">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>