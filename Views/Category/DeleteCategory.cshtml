@model Catagory;
@{
    ViewData["Title"] = "Delete Category";
}

<form asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@Model.Id" method="post"
    class="w-100 bg-secondary p-5" style="border-radius: 20px;">
    <h2 class="text-light">Delete Category</h2>
    <hr>
    <div class="w-50 container justify-content-center ">
        <div class="d-flex justify-content-center m-2">
            <label asp-for="@Model.Name" class="label w-25 text-light">Name</label>
            <input asp-for="@Model.Name" value="@Model.Name" class="form-control" required
                placeholder="Enter Category Name" disabled>
        </div>

        <div class="d-flex justify-content-center m-2">
            <label asp-for="@Model.DisplayOrder" class="label w-25 text-light">Display Order</label>
            <input asp-for="@Model.DisplayOrder" value="@Model.DisplayOrder" type="number" class="form-control"
                placeholder="Enter Order Number" disabled>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger m-1">Delete Category</button>
            <a asp-controller="Category" asp-action="IndexCategory" class="btn btn-primary m-1">Back to
                Category List</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}